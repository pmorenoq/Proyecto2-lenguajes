import java.io.*;
import java.util.*;


//java 11
public class Busqueda {
	
//	zona para declarar las funciones de primer orden
		
	public static void main(String[] args) {
		
//		interfaz principal
        App menu = new App();
        menu.interfaz();
	
//		declarar Scanner
		Scanner sc = new Scanner(System.in);
		int opcion = sc.nextInt();
		
			if(opcion < 1 || opcion > 3) {
				System.out.println("Digite una opcion correcta");
				System.exit(0);
			}
		
		switch (opcion){	
		case 1:{
			try {
				File doc = new File("C:\\Users\\siimo\\OneDrive\\Documents\\Programming\\Java\\app1\\app1\\src\\columna11.txt");
				File doc2 = new File("C:\\Users\\siimo\\OneDrive\\Documents\\Programming\\Java\\app1\\app1\\src\\columna12.txt");
				
				Scanner obj = new Scanner(doc);
				Scanner obj2 = new Scanner(doc2);
				
				ArrayList<String> columna11 = new ArrayList();
				ArrayList<String> columna12 = new ArrayList();	
				
				while(obj.hasNextLine() && obj2.hasNextLine()) {
//					System.out.println(obj.nextLine());
//					System.out.println(obj2.nextLine());
					
					columna11.add(obj.nextLine());
					columna12.add(obj2.nextLine());	
				}
				
				System.out.println(columna11);
				System.out.println(columna12);
				
                System.out.print(menu.combinada(columna11, columna12));

			} catch (FileNotFoundException e) {
					e.printStackTrace();
					
			}
			
			break;
			
		}
		
		case 2:{
			try {
				File doc = new File("C:\\Users\\siimo\\OneDrive\\Documents\\Programming\\Java\\app1\\app1\\src\\columna21.txt");
				File doc2 = new File("C:\\Users\\siimo\\OneDrive\\Documents\\Programming\\Java\\app1\\app1\\src\\columna22.txt");
				
				Scanner obj = new Scanner(doc);
				Scanner obj2 = new Scanner(doc2);
				
				ArrayList<String> columna21 = new ArrayList();
				ArrayList<String> columna22 = new ArrayList();	
				
				while(obj.hasNextLine() && obj2.hasNextLine()) {
//					System.out.println(obj.nextLine());
//					System.out.println(obj2.nextLine());
					
					columna21.add(obj.nextLine());
					columna22.add(obj2.nextLine());	
				}
				
				System.out.println(columna21);
				System.out.println(columna22);

                System.out.print(menu.combinada(columna21, columna22));
						
			} catch (FileNotFoundException e) {
					e.printStackTrace();
					
			}

			break;
			
		}
		
		case 3:{
			try {
				File doc = new File("C:\\Users\\siimo\\OneDrive\\Documents\\Programming\\Java\\app1\\app1\\src\\columna31.txt");
				File doc2 = new File("C:\\Users\\siimo\\OneDrive\\Documents\\Programming\\Java\\app1\\app1\\src\\columna32.txt");
				
				Scanner obj = new Scanner(doc);
				Scanner obj2 = new Scanner(doc2);
				
				ArrayList<String> columna31 = new ArrayList();
				ArrayList<String> columna32 = new ArrayList();	
				
				while(obj.hasNextLine() && obj2.hasNextLine()) {
//					System.out.println(obj.nextLine());
//					System.out.println(obj2.nextLine());
					
					columna31.add(obj.nextLine());
					columna32.add(obj2.nextLine());	
				}
				
				System.out.println(columna31);
				System.out.println(columna32);

                System.out.print(menu.combinada(columna31, columna32));
						
			} catch (FileNotFoundException e) {
					e.printStackTrace();
					
			}

			break;
			
		}
		
		
		}
		
	}

}
